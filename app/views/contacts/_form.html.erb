<%= form_with(model: @contact, local: true, class: 'space-y-4') do |f| %>
  <div>
    <%= f.label :name, 'Ad Soyad', class: 'block mb-2' %>
    <%= f.text_field :name, class: 'w-full px-4 py-2 border rounded' %>
  </div>

  <div>
    <%= f.label :phone, 'Telefon Numarası', class: 'block mb-2' %>
    <%= f.telephone_field :phone, class: 'w-full px-4 py-2 border rounded' %>
  </div>

  <div>
    <%= f.label :message, 'Mesajınız', class: 'block mb-2' %>
    <%= f.text_area :message, rows: 4, class: 'w-full px-4 py-2 border rounded' %>
  </div>

  <%= f.submit 'Gönder', class: 'bg-blue-600 text-white px-6 py-2 rounded-full hover:bg-blue-700 transition' %>
<% end %> 