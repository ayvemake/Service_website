<div class="container mx-auto px-4 py-12">
  <!-- En-tête -->
  <div class="relative h-64 mb-8 rounded-xl overflow-hidden">
    <%= image_tag "sanitary/general/general1.webp", 
        class: "w-full h-full object-cover",
        alt: "İletişim Banner" %>
    <div class="absolute inset-0 bg-gradient-to-r from-black/60 to-transparent"></div>
    <div class="absolute bottom-0 left-0 p-8">
      <h1 class="text-4xl font-bold text-white">Bizimle İletişime Geçin</h1>
    </div>
  </div>

  <!-- Informations de contact -->
  <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-12">
    <!-- Carte pour le téléphone -->
    <div class="bg-white p-6 rounded-xl shadow-sm border border-gray-100 hover:border-blue-200 transition-colors duration-300">
      <div class="flex items-center mb-4">
        <div class="p-3 bg-blue-50 rounded-lg">
          <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
