<div id="service-modal" class="fixed inset-0 bg-black bg-opacity-50 z-50 modal-enter" data-controller="modal" data-action="click->modal#clickOutside">
  <div class="min-h-screen px-4 text-center">
    <div class="fixed inset-0 transition-opacity" aria-hidden="true">
      <div class="absolute inset-0 bg-gray-500 opacity-75"></div>
    </div>

    <!-- Modal panel -->
    <div class="inline-block w-full max-w-4xl p-6 my-8 text-left align-middle transition-all transform bg-white shadow-xl rounded-2xl">
      <div class="absolute top-0 right-0 pt-4 pr-4">
        <button type="button" class="text-gray-400 hover:text-gray-500" data-action="modal#close">
          <span class="sr-only">Kapat</span>
          <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>

      <div class="mt-3">
        <div class="flex items-center justify-between mb-4">
          <h3 class="text-2xl font-bold text-gray-900"><%= service.name %></h3>
          <% if service.urgent? %>
            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-red-100 text-red-800">
              Acil Servis
            </span>
          <% end %>
        </div>

        <!-- Image Gallery -->
        <div class="relative h-64 mb-6 rounded-lg overflow-hidden">
          <%= image_tag service_image(service), class: "w-full h-full object-cover" %>
        </div>

        <!-- Description -->
        <div class="prose max-w-none mb-6">
          <p class="text-gray-600"><%= service.description %></p>
          <% if service.detailed_description.present? %>
            <p class="text-gray-600 mt-4"><%= service.detailed_description %></p>
          <% end %>
        </div>

        <!-- Avantages -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-6">
          <% service.service_advantages.each do |advantage| %>
            <div class="flex items-start space-x-3">
              <div class="flex-shrink-0">
                <svg class="h-6 w-6 text-emerald-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                </svg>
              </div>
              <div>
                <h4 class="text-lg font-medium text-gray-900"><%= advantage.title %></h4>
                <p class="text-gray-600"><%= advantage.description %></p>
              </div>
            </div>
          <% end %>
        </div>

        <!-- CaractÃ©ristiques -->
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-6">
          <% if service.available_24_7? %>
            <div class="text-center p-4 bg-gray-50 rounded-lg">
              <svg class="h-8 w-8 mx-auto text-emerald-500 mb-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
              <span class="text-sm font-medium text-gray-900">7/24 Hizmet</span>
            </div>
          <% end %>

          <% if service.warranty? %>
            <div class="text-center p-4 bg-gray-50 rounded-lg">
              <svg class="h-8 w-8 mx-auto text-emerald-500 mb-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
              </svg>
              <span class="text-sm font-medium text-gray-900">Garantili Hizmet</span>
            </div>
          <% end %>
        </div>

        <!-- Actions -->
        <div class="flex items-center justify-between mt-8">
          <%= link_to new_customer_inquiry_path(service: service.name), 
              class: "inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md shadow-sm text-white bg-emerald-600 hover:bg-emerald-700" do %>
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 4H6a2 2 0 00-2 2v12a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-2m-4-1v8m0 0l3-3m-3 3L9 8"/>
            </svg>
            Teklif Al
          <% end %>

          <a href="tel:+905555555555" class="inline-flex items-center px-6 py-3 border border-emerald-600 text-base font-medium rounded-md text-emerald-600 hover:bg-emerald-50">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
            </svg>
            Hemen Ara
          </a>
        </div>
      </div>
    </div>
  </div>
</div> 