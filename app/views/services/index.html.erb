<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold text-center mb-8">Hizmetlerimiz</h1>

  <div class="mb-8">
    <div class="flex justify-center space-x-4">
      <% @categories.each do |category| %>
        <%= link_to category.humanize, services_path(category: category), 
            class: "px-4 py-2 rounded #{params[:category] == category ? 'bg-blue-600 text-white' : 'bg-gray-200 text-gray-800'}" %>
      <% end %>
    </div>
  </div>

  <div class="grid md:grid-cols-3 gap-6">
    <% @services.each do |service| %>
      <div class="bg-white rounded-lg shadow-md overflow-hidden">
        <div class="p-6">
          <h2 class="text-xl font-semibold mb-2"><%= service.name %></h2>
          <p class="text-gray-600 mb-4"><%= service.description %></p>
          <div class="flex justify-between items-center">
            <span class="text-blue-600 font-bold">
              <%= number_to_currency(service.price, unit: 'â‚º') %>
            </span>
            <%= link_to 'Detaylar', service_path(service), 
                class: 'bg-blue-600 text-white px-4 py-2 rounded-full hover:bg-blue-700 transition' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div> 