<div class="bg-gradient-to-b from-gray-50 to-white min-h-screen">
  <!-- Hero Section -->
  <div class="container mx-auto px-4 py-12">
    <div class="text-center max-w-3xl mx-auto mb-16">
      <h1 class="text-4xl font-bold text-gray-900 mb-4">
        <%= @category == 'tesisat' ? 'Profesyonel Tesisat Hizmetleri' : 'Boya ve Dekorasyon Hizmetleri' %>
      </h1>
      <p class="text-lg text-gray-600 mb-8">
        <%= @category == 'tesisat' ? 
          'Kırmadan dökmeden, son teknoloji cihazlarla İstanbul\'un tüm ilçelerinde 7/24 tesisat hizmeti veriyoruz.' : 
          'Uzman ekibimizle iç ve dış cephe boya işlerinizi garantili olarak yapıyoruz.' %>
      </p>
      <div class="flex flex-wrap justify-center gap-4">
        <a href="tel:+905555555555" 
           class="inline-flex items-center px-6 py-3 bg-<%= @category == 'tesisat' ? 'emerald' : 'amber' %>-600 text-white rounded-lg hover:bg-<%= @category == 'tesisat' ? 'emerald' : 'amber' %>-700 transition-colors duration-200">
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
          </svg>
          Hemen Arayın
        </a>
        <%= link_to new_customer_inquiry_path, class: "inline-flex items-center px-6 py-3 border border-#{@category == 'tesisat' ? 'emerald' : 'amber'}-600 text-#{@category == 'tesisat' ? 'emerald' : 'amber'}-600 rounded-lg hover:bg-#{@category == 'tesisat' ? 'emerald' : 'amber'}-50 transition-colors duration-200" do %>
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 4H6a2 2 0 00-2 2v12a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-2m-4-1v8m0 0l3-3m-3 3L9 8m-5 5h2.586a1 1 0 01.707.293l2.414 2.414a1 1 0 00.707.293h3.172a1 1 0 00.707-.293l2.414-2.414a1 1 0 01.707-.293H20"/>
          </svg>
          Teklif Alın
        <% end %>
      </div>
    </div>

    <!-- Navigation des services -->
    <div class="container mx-auto px-4 mb-8">
      <div class="flex justify-center space-x-4">
        <%= link_to hizmetler_path(category: 'tesisat'), 
            class: "px-6 py-3 rounded-lg #{@category == 'tesisat' ? 'bg-emerald-600 text-white' : 'bg-white text-gray-700 border border-gray-300'} hover:shadow-md transition-all duration-200" do %>
          <div class="flex items-center space-x-2">
            <%= render 'shared/icons/pipe' %>
            <span>Tesisat Hizmetleri</span>
          </div>
        <% end %>

        <%= link_to hizmetler_path(category: 'boya'), 
            class: "px-6 py-3 rounded-lg #{@category == 'boya' ? 'bg-amber-600 text-white' : 'bg-white text-gray-700 border border-gray-300'} hover:shadow-md transition-all duration-200" do %>
          <div class="flex items-center space-x-2">
            <%= render 'shared/icons/paint_brush' %>
            <span>Boya Hizmetleri</span>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Filtres et Recherche -->
    <div class="container mx-auto px-4 mb-8">
      <div class="bg-white rounded-xl shadow-sm p-4">
        <div class="flex flex-wrap items-center gap-4">
          <!-- Barre de recherche -->
          <div class="flex-1 min-w-[200px]">
            <div class="relative">
              <input type="text" 
                     placeholder="Hizmet ara..." 
                     class="w-full pl-10 pr-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500"
                     data-services-filter-target="searchInput"
                     data-action="input->services-filter#search">
              <svg class="w-5 h-5 text-gray-400 absolute left-3 top-1/2 -translate-y-1/2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
              </svg>
            </div>
          </div>

          <!-- Filtres rapides -->
          <div class="flex flex-wrap gap-2">
            <button data-tag="urgent" 
                    data-action="services-filter#filterByTag"
                    class="px-4 py-2 text-sm border border-gray-300 rounded-lg hover:bg-gray-50 focus:ring-2 focus:ring-emerald-500 transition-colors">
              Acil Servis
            </button>
            <button data-tag="24/7" 
                    data-action="services-filter#filterByTag"
                    class="px-4 py-2 text-sm border border-gray-300 rounded-lg hover:bg-gray-50 focus:ring-2 focus:ring-emerald-500 transition-colors">
              7/24 Hizmet
            </button>
            <button data-tag="warranty" 
                    data-action="services-filter#filterByTag"
                    class="px-4 py-2 text-sm border border-gray-300 rounded-lg hover:bg-gray-50 focus:ring-2 focus:ring-emerald-500 transition-colors">
              Garantili
            </button>
          </div>
        </div>
      </div>
    </div>

    <!-- Grille des services -->
    <div class="container mx-auto px-4 mb-16">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <% @services.where(category: @category).each do |service| %>
          <div class="bg-white rounded-xl shadow-sm overflow-hidden group hover:shadow-lg transition-shadow duration-300"
               data-services-filter-target="serviceCard"
               data-tags="<%= service.tags.to_json %>">
            <!-- Image du service -->
            <div class="relative h-48 overflow-hidden">
              <%= image_tag service_image(service), 
                  class: "w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-300", 
                  alt: service.name %>
              <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent"></div>
              
              <!-- Badge Urgence si applicable -->
              <% if service.name.include?('Acil') || service.name.include?('Kaçak') %>
                <div class="absolute top-4 right-4">
                  <span class="px-3 py-1 bg-red-500 text-white text-sm font-medium rounded-full">
                    Acil Servis
                  </span>
                </div>
              <% end %>
            </div>

            <!-- Contenu -->
            <div class="p-6">
              <h3 class="text-xl font-semibold text-gray-900 mb-2 group-hover:text-emerald-600 transition-colors duration-200">
                <%= service.name %>
              </h3>
              <p class="text-gray-600 mb-4 line-clamp-2">
                <%= service.description %>
              </p>

              <!-- Caractéristiques -->
              <div class="space-y-2 mb-6">
                <% service.advantages&.first(3).each do |advantage| %>
                  <div class="flex items-center text-sm text-gray-600">
                    <svg class="w-4 h-4 text-emerald-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                    </svg>
                    <%= advantage['title'] %>
                  </div>
                <% end %>
              </div>

              <!-- Actions -->
              <div class="flex items-center justify-between">
                <%= link_to service_path(service), 
                    class: "text-emerald-600 hover:text-emerald-700 font-medium text-sm" do %>
                  Detaylı Bilgi
                  <span aria-hidden="true"> &rarr;</span>
                <% end %>

                <%= link_to new_customer_inquiry_path(service: service.name), 
                    class: "inline-flex items-center px-4 py-2 bg-emerald-600 text-white text-sm font-medium rounded-lg hover:bg-emerald-700 transition-colors duration-200" do %>
                  Teklif Al
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Section Avantages -->
    <div class="container mx-auto px-4 mb-16">
      <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
        <!-- Garantie -->
        <div class="bg-white p-6 rounded-xl shadow-sm text-center">
          <div class="w-12 h-12 bg-emerald-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-6 h-6 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
            </svg>
          </div>
          <h4 class="font-medium text-gray-900 mb-2">2 Yıl Garanti</h4>
          <p class="text-sm text-gray-600">Tüm hizmetlerimiz garantilidir</p>
        </div>

        <!-- Service 7/24 -->
        <div class="bg-white p-6 rounded-xl shadow-sm text-center">
          <div class="w-12 h-12 bg-emerald-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-6 h-6 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
          <h4 class="font-medium text-gray-900 mb-2">7/24 Hizmet</h4>
          <p class="text-sm text-gray-600">Her zaman yanınızdayız</p>
        </div>

        <!-- Prix compétitifs -->
        <div class="bg-white p-6 rounded-xl shadow-sm text-center">
          <div class="w-12 h-12 bg-emerald-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-6 h-6 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
          <h4 class="font-medium text-gray-900 mb-2">Uygun Fiyat</h4>
          <p class="text-sm text-gray-600">Rekabetçi fiyatlar</p>
        </div>

        <!-- Équipe professionnelle -->
        <div class="bg-white p-6 rounded-xl shadow-sm text-center">
          <div class="w-12 h-12 bg-emerald-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-6 h-6 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
            </svg>
          </div>
          <h4 class="font-medium text-gray-900 mb-2">Uzman Ekip</h4>
          <p class="text-sm text-gray-600">Deneyimli ustalar</p>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Stimulus Controller pour la navigation -->
<%= content_tag :div, nil, 
    data: { 
      controller: "services-filter",
      services_filter_category_value: params[:category] 
    } %> 