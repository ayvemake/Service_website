<div class="bg-gradient-to-b from-gray-50 to-white min-h-screen">
  <!-- Hero Section -->
  <div class="container mx-auto px-4 py-12">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
      <!-- En-tête de la page -->
      <div class="text-center max-w-4xl mx-auto mb-16">
        <h1 class="text-4xl lg:text-5xl font-bold text-gray-900 mb-4">Hizmetlerimiz</h1>
        <div class="h-1 w-24 bg-gray-600 mx-auto mb-8"></div>
        <p class="text-xl text-gray-600">Profesyonel çözümler, güvenilir hizmet</p>
      </div>

      <!-- Services Flow -->
      <div class="max-w-6xl mx-auto space-y-32">
        <!-- Tesisat Hizmetleri -->
        <section>
          <h2 class="text-3xl font-bold text-blue-800 mb-16">Tesisat Hizmetleri</h2>
          
          <div class="space-y-24">
            <% @tesisat_services&.each_with_index do |service, index| %>
              <div class="group">
                <div class="grid md:grid-cols-12 gap-8 items-center <%= index.odd? ? 'md:flex-row-reverse' : '' %>">
                  <!-- Image Section -->
                  <div class="md:col-span-5 relative">
                    <div class="aspect-[4/3] rounded-2xl overflow-hidden">
                      <%= image_tag service_image(service), 
                          class: "w-full h-full object-cover transform transition-transform duration-500 group-hover:scale-105" %>
                    </div>
                    <!-- Badges -->
                    <% if service.urgent? %>
                      <div class="absolute top-4 right-4 px-4 py-2 bg-red-100 text-red-800 rounded-full text-sm font-medium">
                        Acil Servis
                      </div>
                    <% end %>
                  </div>

                  <!-- Content Section -->
                  <div class="md:col-span-7 p-6 bg-white rounded-2xl shadow-sm">
                    <div class="flex items-start gap-4 mb-6">
                      <div class="w-12 h-12 rounded-xl bg-blue-50 flex items-center justify-center flex-shrink-0">
                        <%= render_service_icon(service.name, "w-6 h-6 text-blue-800") %>
                      </div>
                      <h3 class="text-2xl font-semibold text-gray-900"><%= service.name %></h3>
                    </div>

                    <p class="text-gray-600 mb-6"><%= service.description %></p>

                    <% if service.service_advantages.any? %>
                      <div class="grid grid-cols-1 gap-4 mb-6">
                        <% service.service_advantages.first(2).each do |advantage| %>
                          <div class="bg-gray-50 p-4 rounded-lg">
                            <p class="text-gray-900"><%= advantage.title %></p>
                          </div>
                        <% end %>
                      </div>
                    <% end %>

                    <%= link_to new_customer_inquiry_path(service: service.id), 
                        class: "inline-flex items-center text-blue-800 hover:text-blue-700" do %>
                      <span>Teklif Alın</span>
                      <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                      </svg>
                    <% end %>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </section>

        <!-- Boya Hizmetleri -->
        <section>
          <h2 class="text-3xl font-bold text-amber-800 mb-16">Boya Hizmetleri</h2>
          
          <div class="space-y-24">
            <% @boya_services&.each_with_index do |service, index| %>
              <div class="group">
                <div class="grid md:grid-cols-12 gap-8 items-center <%= index.odd? ? 'md:flex-row-reverse' : '' %>">
                  <!-- Image Section -->
                  <div class="md:col-span-5 relative">
                    <div class="aspect-[4/3] rounded-2xl overflow-hidden">
                      <%= image_tag service_image(service), 
                          class: "w-full h-full object-cover transform transition-transform duration-500 group-hover:scale-105" %>
                    </div>
                  </div>

                  <!-- Content Section -->
                  <div class="md:col-span-7 p-6 bg-white rounded-2xl shadow-sm">
                    <div class="flex items-start gap-4 mb-6">
                      <div class="w-12 h-12 rounded-xl bg-amber-50 flex items-center justify-center flex-shrink-0">
                        <%= render_service_icon(service.name, "w-6 h-6 text-amber-800") %>
                      </div>
                      <h3 class="text-2xl font-semibold text-gray-900"><%= service.name %></h3>
                    </div>

                    <p class="text-gray-600 mb-6"><%= service.description %></p>

                    <% if service.service_advantages.any? %>
                      <div class="grid grid-cols-1 gap-4 mb-6">
                        <% service.service_advantages.first(2).each do |advantage| %>
                          <div class="bg-gray-50 p-4 rounded-lg">
                            <p class="text-gray-900"><%= advantage.title %></p>
                          </div>
                        <% end %>
                      </div>
                    <% end %>

                    <%= link_to new_customer_inquiry_path(service: service.id), 
                        class: "inline-flex items-center text-amber-800 hover:text-amber-700" do %>
                      <span>Teklif Alın</span>
                      <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                      </svg>
                    <% end %>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </section>
      </div>

      <!-- Call to Action -->
      <div class="max-w-4xl mx-auto mt-24 text-center">
        <div class="bg-gradient-to-br from-gray-900 to-gray-800 rounded-2xl p-8">
          <div class="flex justify-center gap-4">
            <a href="tel:+905555555555" 
               class="px-6 py-3 bg-white text-gray-900 rounded-lg hover:bg-gray-100 transition-colors">
              7/24 Acil Servis
            </a>
            <%= link_to "Teklif Alın", new_customer_inquiry_path, 
                class: "px-6 py-3 border border-white/20 text-white rounded-lg hover:bg-white/10 transition-colors" %>
          </div>
        </div>
      </div>
    </div>

    <!-- Section Avantages -->
    <div class="container mx-auto px-4 mb-16">
      <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
        <!-- Garantie -->
        <div class="bg-white p-6 rounded-xl shadow-sm text-center">
          <div class="w-12 h-12 bg-emerald-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-6 h-6 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
            </svg>
          </div>
          <h4 class="font-medium text-gray-900 mb-2">2 Yıl Garanti</h4>
          <p class="text-sm text-gray-600">Tüm hizmetlerimiz garantilidir</p>
        </div>

        <!-- Service 7/24 -->
        <div class="bg-white p-6 rounded-xl shadow-sm text-center">
          <div class="w-12 h-12 bg-emerald-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-6 h-6 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
          <h4 class="font-medium text-gray-900 mb-2">7/24 Hizmet</h4>
          <p class="text-sm text-gray-600">Her zaman yanınızdayız</p>
        </div>

        <!-- Prix compétitifs -->
        <div class="bg-white p-6 rounded-xl shadow-sm text-center">
          <div class="w-12 h-12 bg-emerald-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-6 h-6 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
          <h4 class="font-medium text-gray-900 mb-2">Uygun Fiyat</h4>
          <p class="text-sm text-gray-600">Rekabetçi fiyatlar</p>
        </div>

        <!-- Équipe professionnelle -->
        <div class="bg-white p-6 rounded-xl shadow-sm text-center">
          <div class="w-12 h-12 bg-emerald-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-6 h-6 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
            </svg>
          </div>
          <h4 class="font-medium text-gray-900 mb-2">Uzman Ekip</h4>
          <p class="text-sm text-gray-600">Deneyimli ustalar</p>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Stimulus Controller pour la navigation -->
<%= content_tag :div, nil, 
    data: { 
      controller: "services-filter",
      services_filter_category_value: params[:category] 
    } %>

<%= javascript_tag do %>
  function showCategory(category) {
    document.querySelectorAll('.category-tab').forEach(tab => {
      if (tab.id === `${category}-tab`) {
        tab.classList.add('active-tab');
        if (category === 'tesisat') {
          tab.classList.add('text-blue-800', 'bg-blue-50');
        } else {
          tab.classList.add('text-amber-600', 'bg-amber-50');
        }
      } else {
        tab.classList.remove('active-tab', 'text-blue-800', 'bg-blue-50', 'text-amber-600', 'bg-amber-50');
        tab.classList.add('text-gray-600', 'hover:text-gray-800', 'hover:bg-gray-50');
      }
    });

    document.querySelectorAll('.service-section').forEach(section => {
      section.classList.add('hidden');
    });
    document.getElementById(`${category}-section`).classList.remove('hidden');
  }

  document.addEventListener('DOMContentLoaded', function() {
    showCategory('tesisat');
  });
<% end %>

<% content_for :head do %>
  <style>
    .service-icon {
      transition: transform 0.2s ease;
    }
    
    .group:hover .service-icon {
      transform: scale(1.1);
    }
  </style>
<% end %> 