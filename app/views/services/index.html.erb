<div class="bg-gradient-to-b from-gray-50 to-white min-h-screen">
  <!-- Hero Section -->
  <div class="container mx-auto px-4 py-12">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
      <!-- En-tête de la page -->
      <div class="text-center max-w-4xl mx-auto mb-16">
        <h1 class="text-4xl lg:text-5xl font-bold text-gray-900 mb-4">Hizmetlerimiz</h1>
        <div class="h-1 w-24 bg-gray-600 mx-auto mb-8"></div>
        <p class="text-xl text-gray-600">Size en iyi hizmeti sunmak için buradayız</p>
      </div>

      <!-- Onglets de navigation -->
      <div class="flex justify-center space-x-4 mb-16">
        <button onclick="showCategory('tesisat')" 
                class="category-tab px-8 py-4 rounded-lg text-lg font-medium transition-all duration-200"
                id="tesisat-tab">
          <div class="flex items-center space-x-2">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
            </svg>
            <span>Tesisat Hizmetleri</span>
          </div>
        </button>
        
        <button onclick="showCategory('boya')"
                class="category-tab px-8 py-4 rounded-lg text-lg font-medium transition-all duration-200"
                id="boya-tab">
          <div class="flex items-center space-x-2">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01"/>
            </svg>
            <span>Boya Hizmetleri</span>
          </div>
        </button>
      </div>

      <!-- Services Grid -->
      <div class="max-w-7xl mx-auto">
        <!-- Section Tesisat -->
        <div id="tesisat-section" class="service-section">
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            <% @tesisat_services&.each do |service| %>
              <div class="bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1">
                <div class="relative h-48">
                  <%= image_tag service_image(service), class: "w-full h-full object-cover" %>
                  <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent"></div>
                  <div class="absolute bottom-4 left-4">
                    <h3 class="text-xl font-bold text-white"><%= service.name %></h3>
                  </div>
                </div>
                <div class="p-6">
                  <p class="text-gray-600 mb-4 line-clamp-3"><%= service.description %></p>
                  <div class="flex justify-between items-center">
                    <button onclick="showServiceDetails('<%= service.name %>', '<%= service.description %>', 'tesisat')"
                            class="inline-flex items-center text-blue-800 hover:text-blue-900 font-medium">
                      Detaylar
                      <svg class="w-4 h-4 ml-2 transform group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                      </svg>
                    </button>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>

        <!-- Section Boya -->
        <div id="boya-section" class="service-section hidden">
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            <% @boya_services&.each do |service| %>
              <div class="bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1">
                <div class="relative h-48">
                  <%= image_tag service_image(service), class: "w-full h-full object-cover" %>
                  <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent"></div>
                  <div class="absolute bottom-4 left-4">
                    <h3 class="text-xl font-bold text-white"><%= service.name %></h3>
                  </div>
                </div>
                <div class="p-6">
                  <p class="text-gray-600 mb-4 line-clamp-3"><%= service.description %></p>
                  <div class="flex justify-between items-center">
                    <button onclick="showServiceDetails('<%= service.name %>', '<%= service.description %>', 'boya')"
                            class="inline-flex items-center text-amber-600 hover:text-amber-700 font-medium">
                      Detaylar
                      <svg class="w-4 h-4 ml-2 transform group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                      </svg>
                    </button>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <!-- Section Avantages -->
    <div class="container mx-auto px-4 mb-16">
      <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
        <!-- Garantie -->
        <div class="bg-white p-6 rounded-xl shadow-sm text-center">
          <div class="w-12 h-12 bg-emerald-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-6 h-6 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
            </svg>
          </div>
          <h4 class="font-medium text-gray-900 mb-2">2 Yıl Garanti</h4>
          <p class="text-sm text-gray-600">Tüm hizmetlerimiz garantilidir</p>
        </div>

        <!-- Service 7/24 -->
        <div class="bg-white p-6 rounded-xl shadow-sm text-center">
          <div class="w-12 h-12 bg-emerald-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-6 h-6 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
          <h4 class="font-medium text-gray-900 mb-2">7/24 Hizmet</h4>
          <p class="text-sm text-gray-600">Her zaman yanınızdayız</p>
        </div>

        <!-- Prix compétitifs -->
        <div class="bg-white p-6 rounded-xl shadow-sm text-center">
          <div class="w-12 h-12 bg-emerald-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-6 h-6 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
          <h4 class="font-medium text-gray-900 mb-2">Uygun Fiyat</h4>
          <p class="text-sm text-gray-600">Rekabetçi fiyatlar</p>
        </div>

        <!-- Équipe professionnelle -->
        <div class="bg-white p-6 rounded-xl shadow-sm text-center">
          <div class="w-12 h-12 bg-emerald-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-6 h-6 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
            </svg>
          </div>
          <h4 class="font-medium text-gray-900 mb-2">Uzman Ekip</h4>
          <p class="text-sm text-gray-600">Deneyimli ustalar</p>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Stimulus Controller pour la navigation -->
<%= content_tag :div, nil, 
    data: { 
      controller: "services-filter",
      services_filter_category_value: params[:category] 
    } %>

<%= javascript_tag do %>
  function showCategory(category) {
    document.querySelectorAll('.category-tab').forEach(tab => {
      if (tab.id === `${category}-tab`) {
        tab.classList.add('active-tab');
        if (category === 'tesisat') {
          tab.classList.add('text-blue-800', 'bg-blue-50');
        } else {
          tab.classList.add('text-amber-600', 'bg-amber-50');
        }
      } else {
        tab.classList.remove('active-tab', 'text-blue-800', 'bg-blue-50', 'text-amber-600', 'bg-amber-50');
        tab.classList.add('text-gray-600', 'hover:text-gray-800', 'hover:bg-gray-50');
      }
    });

    document.querySelectorAll('.service-section').forEach(section => {
      section.classList.add('hidden');
    });
    document.getElementById(`${category}-section`).classList.remove('hidden');
  }

  document.addEventListener('DOMContentLoaded', function() {
    showCategory('tesisat');
  });
<% end %> 