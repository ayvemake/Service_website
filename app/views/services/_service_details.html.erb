<div class="modal-content">
  <div class="flex justify-between items-start mb-6">
    <h2 class="text-2xl font-bold text-gray-900"><%= service.name %></h2>
    <button type="button" 
            class="text-gray-400 hover:text-gray-500"
            data-action="modal#close">
      <span class="sr-only">Kapat</span>
      <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
      </svg>
    </button>
  </div>

  <!-- Contenu du service -->
  <div class="space-y-6">
    <!-- Image -->
    <div class="relative h-64 rounded-lg overflow-hidden">
      <%= image_tag service_image(service), class: "w-full h-full object-cover" %>
    </div>

    <!-- Description -->
    <div class="prose max-w-none">
      <p class="text-gray-600"><%= service.description %></p>
    </div>

    <!-- Avantages -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <% service.service_advantages.each do |advantage| %>
        <div class="flex items-start space-x-3">
          <div class="flex-shrink-0">
            <svg class="h-6 w-6 text-emerald-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
            </svg>
          </div>
          <div>
            <h4 class="font-medium text-gray-900"><%= advantage.title %></h4>
            <p class="text-sm text-gray-500"><%= advantage.description %></p>
          </div>
        </div>
      <% end %>
    </div>

    <!-- Actions -->
    <div class="flex justify-end space-x-4 mt-6">
      <%= link_to new_customer_inquiry_path(service: service.name), 
          class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-emerald-600 hover:bg-emerald-700" do %>
        Teklif Al
      <% end %>
    </div>
  </div>
</div> 