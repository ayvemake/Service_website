<div class="container mx-auto px-4 py-12">
  <!-- Fil d'Ariane -->
  <nav class="mb-8">
    <ol class="flex items-center space-x-2 text-gray-600">
      <li>
        <%= link_to "Anasayfa", root_path, class: "hover:text-emerald-600" %>
      </li>
      <li class="flex items-center space-x-2">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
        </svg>
        <%= link_to "Hizmetlerimiz", services_path, class: "hover:text-emerald-600" %>
      </li>
      <li class="flex items-center space-x-2">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
        </svg>
        <span class="text-gray-900 font-medium"><%= @service.name %></span>
      </li>
    </ol>
  </nav>

  <!-- Contenu Principal -->
  <div class="grid lg:grid-cols-2 gap-12">
    <!-- Image du Service -->
    <div class="relative rounded-xl overflow-hidden shadow-lg">
      <%= image_tag service_image_url(@service), 
          class: "w-full h-[500px] object-cover",
          alt: @service.name %>
    </div>

    <!-- Détails du Service -->
    <div class="space-y-8">
      <div>
        <h1 class="text-4xl font-bold text-gray-900 mb-4"><%= @service.name %></h1>
        <div class="flex items-center space-x-4 text-gray-600">
          <span class="inline-flex items-center">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
            </svg>
            <%= display_category(@service) %>
          </span>
          <span class="inline-flex items-center">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <%= number_to_currency(@service.price, unit: "₺", precision: 0) %>
          </span>
        </div>
      </div>

      <!-- Description -->
      <div class="prose max-w-none">
        <h2 class="text-2xl font-bold text-gray-900 mb-4">Hizmet Detayları</h2>
        <p class="text-gray-600 text-lg leading-relaxed"><%= @service.description %></p>
      </div>

      <!-- Caractéristiques Clés -->
      <% if @service.key_features.present? %>
        <div>
          <h2 class="text-2xl font-bold text-gray-900 mb-4">Özellikler</h2>
          <ul class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <% @service.key_features.each do |feature| %>
              <li class="flex items-center text-gray-600">
                <svg class="w-5 h-5 text-emerald-500 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                </svg>
                <%= feature %>
              </li>
            <% end %>
          </ul>
        </div>
      <% end %>

          // Start of Selection
          <!-- CTA: Call to Action Buttons -->
          <div class="flex space-x-4">
            <!-- Button to request a new customer inquiry for the current service -->
            <%= link_to new_customer_inquiry_path(service_id: @service.id), 
                class: "inline-flex items-center px-8 py-4 bg-emerald-600 text-white rounded-full font-semibold hover:bg-emerald-700 transition-colors" do %>
              Teklif Al
              <!-- Arrow Icon -->
              <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
              </svg>
            <% end %>
    
            <!-- Button to initiate a phone call -->
            <a href="tel:+905555555555" 
               class="inline-flex items-center px-8 py-4 border-2 border-emerald-600 text-emerald-600 rounded-full font-semibold hover:bg-emerald-50 transition-colors">
              <!-- Phone Icon -->
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
              </svg>
              Hemen Ara
            </a>
          </div>
    </div>
  </div>

  <!-- Services Connexes -->
  <% if @related_services.any? %>
    <div class="mt-24">
      <h2 class="text-3xl font-bold text-gray-900 mb-8 text-center">Benzer Hizmetler</h2>
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        <% @related_services.each do |service| %>
          <%= render 'service_card', service: service %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>

<!-- İletişim Formu Modal -->
<%= turbo_frame_tag "modal" %>

<% content_for :breadcrumbs do %>
  <%= link_to "Hizmetlerimiz", services_path, class: "text-gray-500 hover:text-gray-700" %>
  <svg class="h-5 w-5 text-gray-300 mx-2" fill="currentColor" viewBox="0 0 20 20">
    <path d="M5.555 17.776l8-16 .894.448-8 16-.894-.448z"/>
  </svg>
  <span class="text-gray-500"><%= @service.name %></span>
<% end %> 