<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
  <!-- Bouton Retour -->
  <%= link_to services_path, 
      class: "inline-flex items-center text-emerald-600 hover:text-emerald-700 mb-8 group" do %>
    <svg class="w-5 h-5 mr-2 transform group-hover:-translate-x-1 transition-transform" 
         fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
    </svg>
    <span class="text-lg font-medium border-b-2 border-transparent group-hover:border-emerald-600 transition-all">
      Tüm Hizmetlere Dön
    </span>
  <% end %>

  <div class="bg-white rounded-lg shadow-lg overflow-hidden">
    <!-- En-tête du service -->
    <div class="bg-gradient-to-r from-emerald-600 to-emerald-800 p-8 text-white">
      <h1 class="text-4xl font-bold mb-4"><%= @service.name %></h1>
      <p class="text-xl text-emerald-100"><%= @service.description %></p>
    </div>

    <!-- Contenu principal -->
    <div class="p-8">
      <!-- Caractéristiques -->
      <div class="mb-12">
        <h2 class="text-2xl font-bold mb-6">Özellikler</h2>
        <div class="grid md:grid-cols-2 gap-6">
          <% @service.key_features.each do |feature| %>
            <div class="flex items-center space-x-3">
              <div class="flex-shrink-0">
                <div class="w-8 h-8 rounded-full bg-emerald-100 flex items-center justify-center">
                  <svg class="w-5 h-5 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                  </svg>
                </div>
              </div>
              <span class="text-gray-700"><%= feature %></span>
            </div>
          <% end %>
        </div>
      </div>

      <!-- CTA -->
      <div class="flex items-center justify-center p-6 bg-gray-50 rounded-lg">
        <%= link_to new_customer_inquiry_path(service_type: @service.service_type), 
            class: "inline-flex items-center px-8 py-4 border border-transparent text-lg font-medium rounded-lg text-white bg-emerald-600 hover:bg-emerald-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-emerald-500" do %>
          Teklif Al
          <svg class="ml-2 -mr-1 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
          </svg>
        <% end %>
      </div>
    </div>
  </div>
</div>

<!-- İletişim Formu Modal -->
<%= turbo_frame_tag "modal" %> 

<% content_for :breadcrumbs do %>
  <%= link_to "Hizmetlerimiz", services_path, class: "text-gray-500 hover:text-gray-700" %>
  <svg class="h-5 w-5 text-gray-300 mx-2" fill="currentColor" viewBox="0 0 20 20">
    <path d="M5.555 17.776l8-16 .894.448-8 16-.894-.448z"/>
  </svg>
  <span class="text-gray-500"><%= @service.name %></span>
<% end %> 