<div class="bg-white rounded-lg shadow-md hover:shadow-xl transition mb-8">
  <div class="flex flex-row h-full">
    <!-- Zone d'illustration à gauche -->

    <!-- Contenu du service -->
    <div class="w-3/4 p-8">
      <h3 class="text-3xl font-bold mb-4 text-gray-900">
        Boya ve Dekorasyon
      </h3>

      <p class="text-xl leading-relaxed text-gray-700 mb-6">
        İç ve dış cephe boyama, duvar kağıdı, alçı, kartonpiyer, mantolama ve dekoratif boya uygulamaları
      </p>

      <div class="flex flex-wrap gap-3 mb-6">
        <% service.key_features.each do |feature| %>
          <span class="inline-flex items-center px-4 py-2 rounded-full text-lg font-medium bg-emerald-50 text-emerald-900">
            • <%= feature %>
          </span>
        <% end %>
      </div>

      <div class="flex items-center justify-end mt-6 pt-6 border-t border-gray-200">
        <%= link_to 'Detaylı Bilgi', service_path(service), 
            class: 'inline-flex items-center px-6 py-3 text-lg border-2 border-emerald-600 rounded-lg text-emerald-700 hover:bg-emerald-600 hover:text-white transition-colors duration-200 font-semibold' %>
      </div>
    </div>
  </div>
</div> 