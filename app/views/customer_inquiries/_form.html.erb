<div class="bg-white rounded-lg p-6">
  <%= form_with(model: customer_inquiry, local: true, class: "space-y-6") do |f| %>
    <% if customer_inquiry.errors.any? %>
      <div class="bg-red-50 text-red-500 p-4 rounded-lg mb-6">
        <h2 class="text-lg font-medium mb-2">
          <%= pluralize(customer_inquiry.errors.count, "error") %>:
        </h2>
        <ul class="list-disc pl-5">
          <% customer_inquiry.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= f.label :name, "İsim Soyisim", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_field :name, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500" %>
    </div>

    <div>
      <%= f.label :phone, "Telefon", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.telephone_field :phone, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500" %>
    </div>

    <div>
      <%= f.label :email, "E-posta", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.email_field :email, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500" %>
    </div>

    <div>
      <%= f.label :service_type, "Hizmet Türü", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.select :service_type, 
          options_for_select([
            ['Su Tesisatı', 'plumbing'],
            ['Boya', 'painting']
          ]), 
          { prompt: 'Hizmet seçiniz' }, 
          class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500" %>
    </div>

    <div>
      <%= f.label :message, "Mesajınız", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_area :message, rows: 4, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500" %>
    </div>

    <div class="flex items-center">
      <%= f.submit "Gönder", 
          class: "w-full bg-emerald-600 text-white px-6 py-3 rounded-lg hover:bg-emerald-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-emerald-500 transition-colors duration-200" %>
    </div>
  <% end %>
</div> 