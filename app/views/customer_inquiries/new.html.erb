<% content_for :breadcrumbs do %>
  <span class="text-gray-500">İletişim</span>
<% end %>

<div class="bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="lg:text-center mb-12">
      <h2 class="text-base text-blue-600 font-semibold tracking-wide uppercase">İletişim</h2>
      <p class="mt-2 text-3xl leading-8 font-bold tracking-tight text-gray-900 sm:text-4xl">
        Bizimle İletişime Geçin
      </p>
      <p class="mt-4 max-w-2xl text-xl text-gray-500 lg:mx-auto">
        Size en iyi hizmeti sunmak için buradayız. Formu doldurun, uzmanlarımız size ulaşsın.
      </p>
    </div>

    <div class="max-w-2xl mx-auto px-4 py-8">
      <h1 class="text-2xl font-bold mb-6">Teklif Formu</h1>

      <%= form_with(model: @customer_inquiry, local: true, class: "space-y-6") do |f| %>
        <div>
          <%= f.label :name, "İsim", class: "block text-sm font-medium text-gray-700" %>
          <%= f.text_field :name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-emerald-500 focus:ring-emerald-500" %>
        </div>

        <div>
          <%= f.label :phone, "Telefon", class: "block text-sm font-medium text-gray-700" %>
          <%= f.telephone_field :phone, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-emerald-500 focus:ring-emerald-500" %>
        </div>

        <div>
          <%= f.label :email, "E-posta", class: "block text-sm font-medium text-gray-700" %>
          <%= f.email_field :email, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-emerald-500 focus:ring-emerald-500" %>
        </div>

        <div>
          <%= f.label :service_type, "Hizmet", class: "block text-sm font-medium text-gray-700" %>
          <%= f.text_field :service_type, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-emerald-500 focus:ring-emerald-500" %>
        </div>

        <div>
          <%= f.label :message, "Mesaj", class: "block text-sm font-medium text-gray-700" %>
          <%= f.text_area :message, rows: 4, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-emerald-500 focus:ring-emerald-500" %>
        </div>

        <div class="flex justify-end">
          <%= f.submit "Gönder", class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-emerald-600 hover:bg-emerald-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-emerald-500" %>
        </div>
      <% end %>
    </div>

    <!-- Informations de contact -->
    <div class="mt-16 bg-gray-50 rounded-lg p-8">
      <div class="grid grid-cols-1 gap-8 sm:grid-cols-2 lg:grid-cols-3">
        <!-- Téléphone -->
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <svg class="h-6 w-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
          </div>
          <div class="ml-3">
            <h3 class="text-lg font-medium text-gray-900">Telefon</h3>
            <p class="mt-1 text-gray-500">
              <a href="tel:+905555555555" class="hover:text-blue-600">+90 555 555 55 55</a>
            </p>
          </div>
        </div>

        <!-- Email -->
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <svg class="h-6 w-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
          </div>
          <div class="ml-3">
            <h3 class="text-lg font-medium text-gray-900">E-posta</h3>
            <p class="mt-1 text-gray-500">
              <a href="mailto:info@tesisatci.com" class="hover:text-blue-600">info@tesisatci.com</a>
            </p>
          </div>
        </div>

        <!-- Adresse -->
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <svg class="h-6 w-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
          </div>
          <div class="ml-3">
            <h3 class="text-lg font-medium text-gray-900">Adres</h3>
            <p class="mt-1 text-gray-500">
              Merkez Mahallesi, İstanbul Caddesi No:123<br>
              Kadıköy, İstanbul
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div> 