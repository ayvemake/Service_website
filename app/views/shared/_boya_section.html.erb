<section class="py-8 md:py-16 bg-gradient-to-b from-gray-50">
  <div class="container mx-auto px-4 max-w-7xl">
    <!-- En-tête de Section -->
    <div class="text-center max-w-3xl mx-auto mb-16 md:mb-24">
      <span class="text-gray-800 font-semibold tracking-wider uppercase bg-gray-100 px-4 py-1 rounded-full inline-block mb-4">
        İç ve Dış Cephe
      </span>
      <h2 class="text-3xl md:text-5xl font-bold">
        <span class="bg-gradient-to-r from-gray-900 to-gray-700 bg-clip-text text-transparent">
          Boya ve Dekorasyon
        </span>
      </h2>
      <p class="text-gray-600 text-lg mt-6">
        Profesyonel ekibimizle iç ve dış cephe boya, mantolama ve dekorasyon hizmetleri
      </p>
    </div>

    <!-- Grid Layout -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-start max-w-6xl mx-auto">
      <!-- Images Section -->
      <div class="w-full lg:w-7/12">
        <!-- Desktop Grid -->
        <div class="hidden lg:grid grid-cols-4 gap-6 max-w-4xl mx-auto">
          <!-- Image principale -->
          <div class="col-span-2 row-span-2 aspect-[4/3] relative rounded-xl overflow-hidden group">
            <%= image_tag "paint/renovate/renovate1.webp",
                class: "w-full h-full object-cover transition-transform duration-500 group-hover:scale-105",
                alt: "İç Cephe Boyama",
                loading: "lazy" %>
            <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-black/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300">
              <div class="absolute bottom-4 left-4">
                <p class="text-white font-medium">
                  İç Cephe Boyama
                </p>
              </div>
            </div>
          </div>

          <!-- Images secondaires -->
          <div class="col-span-2 aspect-[16/9] relative rounded-xl overflow-hidden group">
            <%= image_tag "paint/renovate/renovate2.webp",
                class: "w-full h-full object-cover transition-transform duration-500 group-hover:scale-105",
                alt: "Dış Cephe Boyama",
                loading: "lazy" %>
            <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-black/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300">
              <div class="absolute bottom-4 left-4">
                <p class="text-white font-medium">
                  Dış Cephe Boyama
                </p>
              </div>
            </div>
          </div>

          <div class="col-span-2 aspect-[16/9] relative rounded-xl overflow-hidden group">
            <%= image_tag "paint/renovate/renovate3.webp",
                class: "w-full h-full object-cover transition-transform duration-500 group-hover:scale-105",
                alt: "Dekoratif Boya",
                loading: "lazy" %>
            <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-black/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300">
              <div class="absolute bottom-4 left-4">
                <p class="text-white font-medium">
                  Dekoratif Boya
                </p>
              </div>
            </div>
          </div>
        </div>

        <!-- Mobile Carousel -->
        <div class="block lg:hidden">
          <%= render 'shared/image_carousel', images: [
            { url: "paint/renovate/renovate1.webp", title: "İç Cephe Boyama" },
            { url: "paint/renovate/renovate2.webp", title: "Dış Cephe Boyama" },
            { url: "paint/renovate/renovate3.webp", title: "Dekoratif Boya" }
          ] %>
        </div>
      </div>

      <!-- Services List à Droite -->
      <div class="space-y-6">
        <% @boya_services.each do |service| %>
          <div class="bg-white rounded-xl p-6 shadow-lg hover:shadow-xl transition-shadow">
            <div class="flex items-start gap-4">
              <div class="w-12 h-12 bg-gray-100 rounded-xl flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01"/>
                </svg>
              </div>
              <div class="flex-1">
                <h3 class="text-xl font-bold text-gray-900 mb-2"><%= service.name %></h3>
                <p class="text-gray-600 mb-4"><%= service.description %></p>
                
                <!-- Avantages -->
                <div class="flex flex-wrap gap-4 mb-4">
                  <% service.service_advantages.each do |advantage| %>
                    <span class="inline-flex items-center px-3 py-1 rounded-full text-sm bg-gray-100 text-gray-800">
                      <%= advantage.title %>
                    </span>
                  <% end %>
                </div>

                <!-- Actions -->
                <div class="flex items-center gap-4">
                  <button onclick="showServiceDetails('<%= service.name %>', '<%= service.description %>', 'boya')"
                          class="text-gray-700 hover:text-gray-900 font-medium inline-flex items-center">
                    Detaylı Bilgi
                    <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                    </svg>
                  </button>
                  
                  <span class="text-gray-300">|</span>
                  
                  <a href="tel:+905555555555" class="text-gray-600 hover:text-gray-900 transition-colors">
                    Hemen Arayın
                  </a>
                </div>
              </div>
            </div>
          </div>
        <% end %>

        <!-- CTA Box -->
        <div class="bg-gray-900 rounded-xl p-8 text-white">
          <h3 class="text-xl font-bold mb-2">Ücretsiz Keşif</h3>
          <p class="text-gray-200 mb-4">
            Profesyonel ekibimizle ücretsiz keşif ve fiyat teklifi için bizi arayın
          </p>
          <div class="flex items-center gap-4">
            <a href="tel:+905555555555" 
               class="px-6 py-2 bg-white text-gray-900 rounded-lg hover:bg-gray-100 transition-colors">
              <span class="font-medium">0555 555 55 55</span>
            </a>
            <%= link_to "Teklif Alın", new_contact_path, 
                class: "px-6 py-2 border border-white text-white rounded-lg hover:bg-white/10 transition-colors" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section> 