<section class="bg-gray-900 text-white">
  <div class="container px-4 py-16 mx-auto sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
      <!-- Carte et Informations -->
      <div class="relative h-[400px] lg:h-full rounded-2xl overflow-hidden shadow-lg">
        <iframe 
          width="100%" 
          height="100%" 
          class="absolute inset-0 w-full h-full"
          style="border:0;" 
          loading="lazy" 
          allowfullscreen 
          referrerpolicy="no-referrer-when-downgrade"
          src="https://www.google.com/maps/embed/v1/place?key=<%= ENV['GOOGLE_MAPS_API_KEY'] %>&q=Bakırköy,Istanbul,Turkey&zoom=14">
        </iframe>
        
        <!-- Info Box -->
        <div class="absolute bottom-4 left-4 right-4 bg-white/95 backdrop-blur-sm rounded-xl p-6 shadow-lg">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <h3 class="text-sm font-semibold text-gray-900 uppercase tracking-wider">Adres</h3>
              <p class="mt-2 text-gray-600">Bakırköy, İstanbul, Türkiye</p>
            </div>
            <div>
              <h3 class="text-sm font-semibold text-gray-900 uppercase tracking-wider">İletişim</h3>
              <div class="mt-2 space-y-1">
                <a href="tel:+41795118990" class="block text-gray-600 hover:text-gray-900 transition-colors">
                  +41 79 511 89 90
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Formulaire -->
      <div class="bg-white rounded-2xl p-8 shadow-lg">
        <div class="max-w-lg mx-auto">
          <h2 class="text-2xl font-bold text-gray-900 sm:text-3xl">İletişime Geçin</h2>
          <p class="mt-4 text-gray-600">Size nasıl yardımcı olabiliriz?</p>

          <%= form_with(model: CustomerInquiry.new, local: true, class: "mt-8 space-y-6") do |f| %>
            <div>
              <%= f.label :name, "İsim", class: "block text-sm font-medium text-gray-700" %>
              <%= f.text_field :name, 
                  class: "mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:border-emerald-500 focus:ring-emerald-500" %>
            </div>

            <div>
              <%= f.label :email, "E-posta", class: "block text-sm font-medium text-gray-700" %>
              <%= f.email_field :email, 
                  class: "mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:border-emerald-500 focus:ring-emerald-500" %>
            </div>

            <div>
              <%= f.label :message, "Mesaj", class: "block text-sm font-medium text-gray-700" %>
              <%= f.text_area :message, rows: 4,
                  class: "mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:border-emerald-500 focus:ring-emerald-500" %>
            </div>

            <div>
              <%= f.submit "Gönder", 
                  class: "w-full flex justify-center py-3 px-4 border border-transparent rounded-lg shadow-sm text-sm font-medium text-white bg-gray-900 hover:bg-gray-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-900 transition-colors duration-200" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section> 