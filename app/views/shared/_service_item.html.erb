<div class="flex items-start">
  <div class="flex-shrink-0">
    <% case service.name %>
    <% when 'Su Kaçağı Tespiti' %>
      <svg class="w-6 h-6 text-<%= type == 'tesisat' ? 'blue' : 'gray' %>-800 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z"/>
      </svg>
    <% when 'Tıkanıklık Açma' %>
      <svg class="w-6 h-6 text-emerald-600 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 10l-2 1m0 0l-2-1m2 1v2.5M20 7l-2 1m2-1l-2-1m2 1v2.5M14 4l-2-1-2 1M4 7l2-1M4 7l2 1M4 7v2.5M12 21l-2-1m2 1l2-1m-2 1v-2.5M6 18l-2-1v-2.5M18 18l2-1v-2.5"/>
      </svg>
    <% when 'İç Cephe Boyama' %>
      <svg class="w-6 h-6 text-amber-600 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01"/>
      </svg>
    <% else %>
      <svg class="w-6 h-6 text-<%= type == 'tesisat' ? 'blue' : 'gray' %>-800 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v3m0 0v3m0-3h3m-3 0H9m12 0a9 9 0 11-18 0 9 9 0 0118 0z"/>
      </svg>
    <% end %>
  </div>
  <div class="ml-4">
    <h4 class="text-xl lg:text-2xl font-semibold mb-2"><%= service.name %></h4>
    <p class="text-gray-600 text-lg leading-relaxed"><%= service.description %></p>
    <div class="mt-4">
      <button onclick="showServiceDetails('<%= service.name %>', '<%= service.description %>', '<%= type %>')" 
              class="inline-flex items-center text-<%= type == 'tesisat' ? 'blue-800 hover:text-blue-900' : 'gray-600 hover:text-gray-700' %> text-lg font-medium">
        Detaylar
        <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
        </svg>
      </button>
    </div>
  </div>
</div> 