<section class="py-16 bg-gray-50">
  <div class="container mx-auto px-4">
    <div class="text-center mb-16">
      <h2 class="text-3xl lg:text-4xl font-bold text-gray-900">
        Örnek Çalışmalarımız
      </h2>
      <p class="mt-4 text-xl text-gray-600">
        Profesyonel ekibimizin gerçekleştirdiği projelerden örnekler
      </p>
    </div>

    <!-- Filtres de Galerie -->
    <div class="flex justify-center mb-12 space-x-4">
      <button data-category="all" class="gallery-filter px-6 py-2 rounded-full bg-blue-800 text-white">
        Tümü
      </button>
      <button data-category="tesisat" class="gallery-filter px-6 py-2 rounded-full text-gray-700 hover:bg-blue-50">
        Tesisat
      </button>
      <button data-category="thermal" class="gallery-filter px-6 py-2 rounded-full text-gray-700 hover:bg-blue-50">
        Kaçak Tespiti
      </button>
      <button data-category="unblock" class="gallery-filter px-6 py-2 rounded-full text-gray-700 hover:bg-blue-50">
        Tıkanıklık
      </button>
    </div>

    <!-- Grille de Galerie -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8" data-controller="gallery">
      <% @service_galleries[:tesisat].each do |category, images| %>
        <% images.each do |image| %>
          <div class="gallery-item" data-category="<%= category %>">
            <div class="relative group overflow-hidden rounded-xl">
              <%= image_tag image[:url], 
                  class: "w-full aspect-[4/3] object-cover transform group-hover:scale-110 transition-transform duration-500",
                  alt: image[:title],
                  loading: "lazy",
                  data: {
                    action: "click->gallery#openLightbox",
                    gallery_target: "image",
                    full: asset_path(image[:url])
                  } %>
              <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-black/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                <div class="absolute bottom-4 left-4">
                  <h3 class="text-white font-medium"><%= image[:title] %></h3>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</section> 