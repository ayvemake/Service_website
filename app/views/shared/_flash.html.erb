<% flash.each do |type, message| %>
  <% flash_classes = case type
    when 'notice'
      'bg-emerald-100 text-emerald-700 border-emerald-200'
    when 'success'
      'bg-emerald-100 text-emerald-700 border-emerald-200'
    when 'error'
      'bg-red-100 text-red-700 border-red-200'
    when 'alert'
      'bg-yellow-100 text-yellow-700 border-yellow-200'
    else
      'bg-emerald-100 text-emerald-700 border-emerald-200'
    end
  %>

  <div class="<%= flash_classes %> px-4 py-3 rounded-lg border mb-4" 
       role="alert"
       data-controller="flash"
       data-flash-target="message">
    <div class="flex items-center justify-between">
      <div class="flex items-center">
        <% if type == 'success' || type == 'notice' %>
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
          </svg>
        <% elsif type == 'error' %>
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
          </svg>
        <% elsif type == 'alert' %>
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
          </svg>
        <% end %>
        <p><%= message %></p>
      </div>
      <button class="text-emerald-600 hover:text-emerald-800" data-action="flash#close">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
        </svg>
      </button>
    </div>
  </div>
<% end %> 