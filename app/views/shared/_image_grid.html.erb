<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
  <% images.each do |image| %>
    <div class="bg-white rounded-xl shadow-lg overflow-hidden aspect-w-16 aspect-h-9">
      <%= image_tag image,
          class: "w-full h-full object-cover",
          alt: alt_text,
          loading: "lazy",
          decoding: "async" %>
    </div>
  <% end %>
</div> 