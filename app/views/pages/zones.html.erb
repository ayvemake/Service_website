<div class="bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="lg:text-center mb-12">
      <h2 class="text-base text-blue-600 font-semibold tracking-wide uppercase">Hizmet Bölgeleri</h2>
      <p class="mt-2 text-3xl leading-8 font-bold tracking-tight text-gray-900 sm:text-4xl">
        İstanbul'un Her Bölgesinde Hizmetinizdeyiz
      </p>
    </div>

    <div class="grid grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-3">
      <% @service_areas.each do |area| %>
        <div class="bg-gray-50 rounded-lg p-6">
          <h3 class="text-lg font-medium text-gray-900"><%= area.name %></h3>
          <p class="mt-2 text-gray-500"><%= area.description %></p>
          <p class="mt-4 text-sm text-blue-600">Posta Kodu: <%= area.postal_code %></p>
        </div>
      <% end %>
    </div>
  </div>
</div>
