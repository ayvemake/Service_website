<div class="container mx-auto px-4 py-8">
  <section class="hero bg-gradient-to-r from-emerald-600 to-emerald-800 text-white rounded-lg shadow-lg p-8 mb-12">
    <div class="grid md:grid-cols-2 gap-8 items-center">
      <div>
        <h1 class="text-4xl font-bold mb-4">İstanbul Tesisat Hizmetleri</h1>
        <p class="text-xl mb-6">
          Profesyonel tesisat ekibimizle her türlü su tesisatı ve boya hizmetlerinizdeyiz.
        </p>
        <div class="flex space-x-4">
          <%= link_to 'Hizmetlerimiz', services_path, 
              class: 'bg-white text-emerald-600 px-6 py-3 rounded-full font-semibold hover:bg-emerald-50 transition' %>
          <%= link_to 'İletişim', new_customer_inquiry_path, 
              class: 'border border-white text-white px-6 py-3 rounded-full hover:bg-white/10 transition' %>
        </div>
      </div>
      <div class="hidden md:block">
        <div class="bg-white/20 rounded-lg p-6">
          <svg class="w-full h-64 text-white" fill="currentColor" viewBox="0 0 24 24">
            <!-- SVG İkonu -->
            <path d="M15 17h2a2 2 0 0 0 2-2V9a2 2 0 0 0-2-2h-6a2 2 0 0 0-2 2v6a2 2 0 0 0 2 2h2v-4h2v4z"/>
          </svg>
        </div>
      </div>
    </div>
  </section>

  <section class="my-16">
    <h2 class="text-3xl font-bold text-center mb-12">Ana Hizmetlerimiz</h2>
    
    <div class="grid md:grid-cols-2 gap-8">
      <!-- Service de Plomberie et Sanitaire -->
      <div class="bg-white rounded-lg shadow-lg overflow-hidden group hover:shadow-xl transition">
        <%= link_to services_path(type: 'plumbing'), class: "block" do %>
          <div class="p-8">
            <h3 class="text-2xl font-semibold mb-4 group-hover:text-emerald-600">
              Su ve Sıhhi Tesisat
            </h3>
            <p class="text-gray-600 mb-4">
              Su tesisatı, lavabo, musluk tamiri, tuvalet tesisatı, 
              gider açma ve su kaçağı tespiti gibi tüm sıhhi tesisat hizmetleri
            </p>
            <span class="text-emerald-600 font-medium inline-flex items-center group-hover:translate-x-2 transition-transform">
              Detaylı Bilgi
              <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
              </svg>
            </span>
          </div>
        <% end %>
      </div>

      <!-- Service de Peinture -->
      <div class="bg-white rounded-lg shadow-lg overflow-hidden group hover:shadow-xl transition">
        <%= link_to services_path(type: 'painting'), class: "block" do %>
          <div class="relative">
            <%= image_tag '/images/services/painting-service.jpg', 
                class: "w-full h-48 object-cover",
                alt: "Boya ve Dekorasyon Hizmetleri" %>
            <div class="p-8">
              <h3 class="text-2xl font-semibold mb-4 group-hover:text-emerald-600">
                Boya ve Dekorasyon
              </h3>
              <p class="text-gray-600 mb-4">
                İç ve dış cephe boyama, duvar kağıdı, alçı, kartonpiyer, 
                mantolama ve dekoratif boya uygulamaları
              </p>
              <span class="text-emerald-600 font-medium inline-flex items-center group-hover:translate-x-2 transition-transform">
                Detaylı Bilgi
                <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                </svg>
              </span>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </section>

  <section class="services mb-12">
    <h2 class="text-3xl font-bold text-center mb-8">Sunduğumuz Hizmetler</h2>
    <div class="grid md:grid-cols-3 gap-6">
      <% @featured_services.each do |service| %>
        <div class="bg-white rounded-lg shadow-md p-6 hover:shadow-xl transition group">
          <div class="text-emerald-600 mb-4">
            <!-- Icône spécifique au service selon le type -->
            <% case service.service_type %>
            <% when 'plumbing' %>
              <svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
              </svg>
            <% when 'heating' %>
              <svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
              </svg>
            <% when 'cooling' %>
              <svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
              </svg>
            <% else %>
              <svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
            <% end %>
          </div>
          <h3 class="text-xl font-semibold mb-2 group-hover:text-emerald-600 transition">
            <%= service.name %>
          </h3>
          <p class="text-gray-600 line-clamp-3"><%= service.description %></p>
          <%= link_to 'Detaylar', service_path(service), 
              class: 'mt-4 inline-block text-emerald-600 hover:underline' %>
        </div>
      <% end %>
    </div>
    <div class="text-center mt-8">
      <%= link_to 'Tüm Hizmetlerimiz', services_path, 
          class: 'inline-block bg-emerald-600 text-white px-6 py-3 rounded-full hover:bg-emerald-700 transition' %>
    </div>
  </section>

  <section class="features bg-gray-50 rounded-lg p-8 mb-12">
    <h2 class="text-3xl font-bold text-center mb-8">Neden Bizi Seçmelisiniz?</h2>
    <div class="grid md:grid-cols-3 gap-6">
      <div class="text-center">
        <div class="bg-emerald-100 rounded-full w-16 h-16 flex items-center justify-center mx-auto mb-4">
          <svg class="w-8 h-8 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <!-- Hızlı Servis İkonu -->
          </svg>
        </div>
        <h3 class="font-semibold text-xl mb-2">Hızlı Servis</h3>
        <p>Acil çağrılara 30 dakika içinde yanıt veriyoruz.</p>
      </div>
      <!-- Diğer özellikler -->
    </div>
  </section>

  <section class="contact bg-white rounded-lg shadow-md p-8">
    <div class="grid md:grid-cols-2 gap-8">
      <div>
        <h2 class="text-3xl font-bold mb-4">Hemen İletişime Geçin</h2>
        <p class="text-gray-600 mb-6">
          Tesisat sorunlarınız için profesyonel çözümler sunuyoruz. Ücretsiz keşif ve danışmanlık.
        </p>
        <div class="space-y-4">
          <div class="flex items-center">
            <svg class="w-6 h-6 mr-4 text-emerald-600" fill="currentColor" viewBox="0 0 24 24">
              <!-- Telefon İkonu -->
            </svg>
            <span>0 (555) 123 45 67</span>
          </div>
          <div class="flex items-center">
            <svg class="w-6 h-6 mr-4 text-emerald-600" fill="currentColor" viewBox="0 0 24 24">
              <!-- E-posta İkonu -->
            </svg>
            <span>destek@istanbultesisat.com</span>
          </div>
        </div>
      </div>
      <div>
        <%= render 'customer_inquiries/form', customer_inquiry: CustomerInquiry.new %>
      </div>
    </div>
  </section>

  <% if @testimonials&.any? %>
    <section class="testimonials bg-gray-50 py-16 mt-12">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center">
          <h2 class="text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl">
            Müşterilerimiz Ne Diyor?
          </h2>
          <p class="mt-4 text-lg text-gray-500">
            Hizmet verdiğimiz müşterilerimizin deneyimleri
          </p>
        </div>

        <div class="mt-12 grid gap-8 md:grid-cols-2 lg:grid-cols-3">
          <% @testimonials.each do |testimonial| %>
            <div class="bg-white rounded-lg shadow-lg p-6">
              <div class="flex items-center mb-4">
                <div class="flex-shrink-0">
                  <%= image_tag testimonial.image_url.presence || "default_avatar.jpg",
                      class: "h-12 w-12 rounded-full object-cover" %>
                </div>
                <div class="ml-4">
                  <h3 class="text-lg font-medium text-gray-900">
                    <%= testimonial.name %>
                  </h3>
                  <p class="text-sm text-gray-500">
                    <%= l(testimonial.created_at, format: :short) %>
                  </p>
                </div>
              </div>
              <div class="mt-2">
                <!-- Étoiles -->
                <div class="flex items-center mb-2">
                  <% 5.times do |i| %>
                    <svg class="h-5 w-5 <%= i < (testimonial.rating || 5) ? 'text-yellow-400' : 'text-gray-300' %>" 
                           fill="currentColor" viewBox="0 0 20 20">
                      <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                    </svg>
                  <% end %>
                </div>
                <!-- Contenu -->
                <p class="text-gray-600 italic">
                  "<%= testimonial.content %>"
                </p>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </section>
  <% end %>

  <!-- CTA Section -->
  <section class="bg-emerald-700 rounded-lg p-12 text-center">
    <h2 class="text-3xl font-bold text-white mb-6">
      7/24 Profesyonel Hizmet İçin Bizi Arayın
    </h2>
    <a href="tel:+905555555555" class="inline-flex items-center px-8 py-4 bg-white text-emerald-700 rounded-full font-semibold hover:bg-emerald-50 transition">
      <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
      </svg>
      Hemen Arayın
    </a>
  </section>
</div>
