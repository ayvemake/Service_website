                        class="${type === 'tesisat' ? 'bg-emerald-600 hover:bg-emerald-700' : 'bg-amber-600 hover:bg-amber-700'} 
                               text-white px-6 py-3 rounded-lg transition-colors duration-200 flex-1 text-center">
